NODE_ENV=development

# Application
SERVER_PORT=3000
SERVER_URL=http://localhost:$SERVER_PORT
WEB_PORT=3001
WEB_URL=http://localhost:$WEB_PORT

# Vite App Environment Variables
VITE_WEB_PORT=$WEB_PORT
VITE_WEB_URL=$WEB_URL
VITE_SERVER_PORT=$SERVER_PORT
VITE_SERVER_URL=$SERVER_URL

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=matcha
DB_USER=matcha_user
DB_PASSWORD=matcha_password
DB_ROOT_PASSWORD=rootpassword
DB_POOL_CONNECTION_LIMIT=10

# Adminer
ADMINER_PORT=8080

# Server Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Container names
CONTAINER_SERVER=matcha-server
CONTAINER_DB=matcha-mysql
CONTAINER_ADMINER=matcha-adminer
CONTAINER_WEB=matcha-web
